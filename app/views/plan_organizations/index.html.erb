<%- model_class = PlanOrganization.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:short_name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @plan_organizations.each do |plan_organization| %>
      <tr>
<!--         <td><%= link_to plan_organization.id, plan_organization_path(plan_organization) %></td> -->
        <td><%= link_to plan_organization.name, plan_organization_path(plan_organization) %></td>
        <td><%= plan_organization.short_name %></td>
        <td><%= plan_organization.description %></td>
        <td><%= plan_organization.country %></td>
        <td><%=l plan_organization.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_plan_organization_path(plan_organization), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plan_organization_path(plan_organization),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_plan_organization_path,
            :class => 'btn btn-primary' %>
