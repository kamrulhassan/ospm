<%- model_class = Deliverable.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deliverables.each do |deliverable| %>
      <tr>
        <td><%= link_to deliverable.description, deliverable_path(deliverable) %></td>
        <!-- <td><%= deliverable.description %></td> -->
        <td><%= deliverable.start_date %></td>
        <td><%= deliverable.end_date %></td>
        <td><%= deliverable.project_id %></td>
        <td><%=l deliverable.created_at %></td>
        <td>
          <% if can? :update, deliverable %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deliverable_path(deliverable), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, deliverable %>                      
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deliverable_path(deliverable),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deliverable_path,
            :class => 'btn btn-primary' %>
