<%- model_class = @plan_deliverable.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:description) %>:</strong><br>
  <%= @plan_deliverable.description %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:start_date) %>:</strong><br>
  <%= @plan_deliverable.start_date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:end_date) %>:</strong><br>
  <%= @plan_deliverable.end_date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:plan_workpackage_id) %>:</strong><br>
  <%= @plan_deliverable.plan_workpackage_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              plan_deliverables_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_plan_deliverable_path(@plan_deliverable), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              plan_deliverable_path(@plan_deliverable),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
