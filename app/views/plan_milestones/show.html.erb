<%- model_class = @plan_milestone.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @plan_milestone.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:description) %>:</strong><br>
  <%= @plan_milestone.description %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:date) %>:</strong><br>
  <%= @plan_milestone.date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:means_of_verificaiton) %>:</strong><br>
  <%= @plan_milestone.means_of_verificaiton %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:plan_project_id) %>:</strong><br>
  <%= @plan_milestone.plan_project_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              plan_milestones_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_plan_milestone_path(@plan_milestone), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              plan_milestone_path(@plan_milestone),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
