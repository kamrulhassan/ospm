<%= form_for @plan_task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :start_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :end_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :plan_workpackage_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :plan_workpackage_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
      <%= f.label :resource, :class => 'control-label'%>
      <% PlanResource.all.each do |resource|  %>
      <div  class="controls">
          <%= check_box_tag "plan_task[plan_resource_ids][]", resource.id, @plan_task.plan_resources.include?(resource)%>
          <%= resource.name %>
      </div>
      <% end %>
  </div>




  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                plan_tasks_path, :class => 'btn' %>
  </div>
<% end %>
